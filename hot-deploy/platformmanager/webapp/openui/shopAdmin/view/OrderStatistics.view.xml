<mvc:View
	controllerName="sap.ui.demo.toolpageapp.controller.OrderStatistics"
	xmlns="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core"
	xmlns:m="sap.m"
	height="100%">

	<m:Page id="ordersStatisticsPage"
		showHeader="false">
		<Table 
			id="table"
			selectionMode="MultiToggle"
			rows="{orders>/OrderHeaders}">
			<toolbar>
				<m:Toolbar>
					<m:Title text="{i18n>orderListTitle}"/>
					<m:ToolbarSpacer />
					<m:SearchField width="50%" search="onFilterOrders"/>
				</m:Toolbar>
			</toolbar>
			<extension>
				<m:FacetFilter
					id="facetFilter"
					type="Simple"
					showReset="true"
					showPopoverOKButton="true"
					reset="handleFacetFilterReset"
					lists="{orderFilters>/filters}">
					<m:lists>
						<m:FacetFilterList
							title="{orderFilters>type}"
							key="{key}"
							multiSelect="true"
							listClose="handleListClose"
							items="{orderFilters>values}" >
							<m:items>
								<m:FacetFilterItem
									text="{orderFilters>text}"
									key="{key}"/>
							</m:items>
						</m:FacetFilterList>
					</m:lists>
				</m:FacetFilter>
			</extension>
			<noData>
				<m:Link
					class="sapUiMediumMargin"
					text="No Data found. Press here to reset all filters."
					press="clearAllFilters"/>
			</noData>
			<columns>
				<Column>
					<m:Label text="{i18n>orderId}"/>
					<template>
						<m:Text text="{orders>orderId}" wrapping="false" />
					</template>
				</Column>
				<Column minScreenWidth="Tablet">
					<m:Label text="{i18n>externalId}"/>
					<template>
						<m:Text text="{orders>externalId}" wrapping="false" />
					</template>
				</Column>
				<Column minScreenWidth="Desktop" hAlign="End">
					<m:Label text="{i18n>orderStatus}"/>
					<template>
						<m:Text text="{orders>statusId}" wrapping="false" />
					</template>
				</Column>
				<Column hAlign="Center">
					<m:Label text="{i18n>grandTotal}"/>
					<template>
						<m:Text text="{orders>grandTotal}" wrapping="false" />
					</template>
				</Column>
			</columns>
		</Table>
	</m:Page>
</mvc:View>