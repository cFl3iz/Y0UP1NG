<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
    <description>BoomMgr Services</description>
    <vendor></vendor>
    <version>1.0</version>

    <service name="noSyntaxError" engine="interface">
        <description>
            Dummy service to prevent empty files and syntax error - Remove when the 1st real service will be added here 
        </description>
    </service>

    <service name="createMySupplier" engine="java"
             use-transaction="true" require-new-transaction="true" transaction-timeout="9980000"
             location="main.java.com.banfftech.boom.BoomServices"
             invoke="createMySupplier" auth="false">
        <description>createMySupplier</description>
        <attribute name="supplierName" type="String" mode="IN" optional="false"/>
        <attribute name="supplierTel" type="String" mode="IN" optional="false"/>

        <attribute name="supplierInfo" type="Map" mode="OUT" optional="true"/>

        <attribute name="resultMap" type="java.util.Map" mode="OUT"
                   optional="true"/>
    </service>

    <service name="createRawMaterials" engine="java"
             use-transaction="true" require-new-transaction="true" transaction-timeout="9980000"
             location="main.java.com.banfftech.boom.BoomServices"
             invoke="createRawMaterials" auth="false">
        <description>createRawMaterials</description>
        <attribute name="productName" type="String" mode="IN" optional="false"/>
        <attribute name="quantityUomId" type="String" mode="IN" optional="false"/>
        <attribute name="imagePath" type="String" mode="IN" optional="false"/>
        <attribute name="suppliers" type="String" mode="IN" optional="true"/>
        <attribute name="resultMap" type="java.util.Map" mode="OUT" optional="true"/>
    </service>

    <service name="createMyFinishedGood" engine="java"
             use-transaction="true" require-new-transaction="true" transaction-timeout="9980000"
             location="main.java.com.banfftech.boom.BoomServices"
             invoke="createMyFinishedGood" auth="false">
        <description>createMyFinishedGood</description>
        <attribute name="productName" type="String" mode="IN" optional="false"/>

        <attribute name="imagePath" type="String" mode="IN" optional="false"/>
        <attribute name="rawMaterials" type="String" mode="IN" optional="true"/>
        <attribute name="resultMap" type="java.util.Map" mode="OUT" optional="true"/>
    </service>


    <service name="queryQuantityUom" engine="java"
             use-transaction="true" require-new-transaction="true" transaction-timeout="9980000"
             location="main.java.com.banfftech.boom.BoomQueryServices"
             invoke="queryQuantityUom" auth="false">
        <description>queryQuantityUom</description>
        <attribute name="uomList" type="List" mode="OUT" optional="false"/>
        <attribute name="resultMap" type="java.util.Map" mode="OUT"
                   optional="true"/>
    </service>

    <service name="queryMySupplierList" engine="java"
             use-transaction="true" require-new-transaction="true" transaction-timeout="9980000"
             location="main.java.com.banfftech.boom.BoomQueryServices"
             invoke="queryMySupplierList" auth="false">
        <description>queryMySupplierList</description>
        <attribute name="supplierList" type="List" mode="OUT" optional="false"/>
        <attribute name="resultMap" type="java.util.Map" mode="OUT"
                   optional="true"/>
    </service>
    <service name="queryMyRawMaterials" engine="java"
             use-transaction="true" require-new-transaction="true" transaction-timeout="9980000"
             location="main.java.com.banfftech.boom.BoomQueryServices"
             invoke="queryMyRawMaterials" auth="false">
        <description>queryMyRawMaterials</description>
        <attribute name="rawMaterialsList" type="List" mode="OUT" optional="false"/>
        <attribute name="resultMap" type="java.util.Map" mode="OUT"
                   optional="true"/>
    </service>

    <service name="queryMyFinishedGood" engine="java"
             use-transaction="true" require-new-transaction="true" transaction-timeout="9980000"
             location="main.java.com.banfftech.boom.BoomQueryServices"
             invoke="queryMyFinishedGood" auth="false">
        <description>queryMyFinishedGood</description>
        <attribute name="finishedGoodList" type="List" mode="OUT" optional="false"/>
        <attribute name="resultMap" type="java.util.Map" mode="OUT"
                   optional="true"/>
    </service>


    
</services>