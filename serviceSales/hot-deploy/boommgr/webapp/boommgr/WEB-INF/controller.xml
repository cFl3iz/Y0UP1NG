<?xml version="1.0" encoding="UTF-8"?>
<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://ofbiz.apache.org/Site-Conf" xsi:schemaLocation="http://ofbiz.apache.org/Site-Conf http://ofbiz.apache.org/dtds/site-conf.xsd">
    <!-- The controller elements that are common to all OFBiz components
         can be found in the following xml file. A component can override the
         elements found in the common-controller.xml file. -->
    <include location="component://common/webcommon/WEB-INF/common-controller.xml"/>
    <include location="component://boommgr/webapp/boommgr/WEB-INF/common-controller.xml"/>

    <description>BoomMgr Component Site Configuration File</description>


    <!-- Events to run on every request after all other processing (chains exempt) -->
    <!--
    <postprocessor>
        <event name="test" type="java" path="org.apache.ofbiz.webapp.event.TestEvent" invoke="test"/>
    </postprocessor>
    -->

    <!-- Request Mappings -->
    <request-map uri="main"><security https="true" auth="true"/><response name="success" type="view" value="main"/></request-map>

    <request-map uri="boomUserLogin">
        <security https="false" auth="false"/>
        <event type="service" invoke="boomUserLogin"/>
        <response name="success" type="request" value="result_json"/>
        <response name="error" type="request" value="result_json"/>
    </request-map>


    <request-map uri="queryPartyInfo">
        <security https="false" auth="false"/>
        <event type="service" invoke="queryPartyInfo"/>
        <response name="success" type="request" value="result_json"/>
        <response name="error" type="request" value="result_json"/>
    </request-map>



    <request-map uri="queryPermisionJson">
        <security https="false" auth="false"/>
        <event type="service" invoke="queryPermisionJson"/>
        <response name="success" type="request" value="result_json"/>
        <response name="error" type="request" value="result_json"/>
    </request-map>
    <request-map uri="updatePermisionJson">
        <security https="false" auth="false"/>
        <event type="service" invoke="updatePermisionJson"/>
        <response name="success" type="request" value="result_json"/>
        <response name="error" type="request" value="result_json"/>
    </request-map>

    <request-map uri="removeDeliveryPlan">
        <security https="false" auth="false"/>
        <event type="service" invoke="removeDeliveryPlan"/>
        <response name="success" type="request" value="result_json"/>
        <response name="error" type="request" value="result_json"/>
    </request-map>

    <request-map uri="register">
        <security https="false" auth="false"/>
        <event type="service" invoke="register"/>
        <response name="success" type="request" value="result_json"/>
        <response name="error" type="request" value="result_json"/>
    </request-map>

    <!-- View Mappings -->
    <view-map name="main" type="screen" page="component://boommgr/widget/BoomMgrScreens.xml#main"/>
</site-conf>