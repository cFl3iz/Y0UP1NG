<?xml version="1.0" encoding="UTF-8"?>
<!--
 PE - PlatForm Services ECA Services
-->

<service-eca xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/service-eca.xsd">


    <!-- ############# About Biz ############# -->

    <!-- If RegisterId Change,Juest Do -->
    <eca service="regJpushRegId" event="return">
        <set field-name="appType" env-name="appType"/>
        <set field-name="deviceType" env-name="deviceType"/>
        <set field-name="regId" env-name="regId"/>
        <set field-name="sendType" value="one"/>
        <set field-name="content" value="您的账号在其他地方登录,本地已下线!" />
        <set field-name="message" value='loginNotification' />
        <action service="pushNotifOrMessage"  mode="async"/>
    </eca>

    <!-- Send Message ,  Do Jpush -->
    <eca service="sendMessage" event="return">
        <set field-name="appType" env-name="appType"/>
        <set field-name="deviceType" env-name="deviceType"/>
        <set field-name="regId" env-name="regId"/>
        <set field-name="sendType" value="one"/>
        <set field-name="content" env-name="partyIdFrom" />
        <set field-name="message" env-name="message" />
        <action service="pushNotifOrMessage"  mode="async"/>
    </eca>


    <!-- ############# About Biz End ############# -->

</service-eca>
