<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
    <description>PlatformManager Services</description>
    <vendor></vendor>
    <version>1.0</version>

    <service name="noSyntaxError" engine="interface">
        <description>
            Dummy service to prevent empty files and syntax error - Remove when the 1st real service will be added here 
        </description>
    </service>


    <!-- JPush -->
    <service name="pushNotifOrMessage" engine="java"
             location="main.java.com.banfftech.platformmanager.jpush.JPushServices" invoke="pushNotifOrMessage" auth="false">
        <description>pushNotifOrMessage</description>
        <attribute name="message" type="String" mode="IN" optional="true"><description>推送Id</description></attribute>
        <attribute name="content" type="String" mode="IN" optional="true"><description>推送Id</description></attribute>
        <attribute name="deviceType" type="String" mode="IN" optional="true"><description>推送Id</description></attribute>

        <attribute name="regId" type="String" mode="INOUT" optional="true"><description>推送Id</description></attribute>
        <attribute name="sendType" type="String" mode="IN" optional="true"><description>安卓还是ios</description></attribute>
        <attribute name="resultMap" type="java.util.Map" mode="OUT" optional="true"/>
    </service>
    <!-- RegisterJpushID -->
    <service name="regJpushRegId" engine="java"
             location="main.java.com.banfftech.platformmanager.jpush.JPushServices" invoke="regJpushRegId" auth="false">
        <description>RegisterJpushID</description>

        <attribute name="regId" type="String" mode="INOUT" optional="true"><description>推送Id</description></attribute>
        <attribute name="deviceType" type="String" mode="INOUT" optional="true"><description>设备类型</description></attribute>
        <!--<attribute name="appType" type="String" mode="INOUT" optional="true"><description>用户app类型</description></attribute>-->
        <attribute name="time" type="String" mode="OUT" optional="true"><description>时间</description></attribute>
    </service>
    <!-- ExitJpush -->
    <service name="removeJpushRegId" engine="java"
             location="main.java.com.banfftech.platformmanager.jpush.JPushServices" invoke="removeJpushRegId" auth="false">
        <description>退出登录删除regId</description>
        <attribute name="regId" type="String" mode="IN" optional="true"><description>设备Id</description></attribute>
    </service>

    <!-- DoSend -->
    <service name="sendMessage" engine="java"
             location="main.java.com.banfftech.platformmanager.PlatformManagerServices"
             invoke="sendMessage" auth="false">
        <description>sendMessage</description>

        <attribute name="orderId" type="String" mode="IN"
                   optional="true" />

        <attribute name="message" type="String" mode="INOUT"
                   optional="true" />
        <attribute name="partyIdTo" type="String" mode="INOUT"
                   optional="true" />
        <attribute name="partyIdFrom" type="String" mode="OUT"
                   optional="true" />

        <attribute name="deviceType" type="String" mode="OUT"
                   optional="true" />
        <attribute name="regId" type="String" mode="OUT"
                   optional="true" />


        <attribute name="resultMap" type="java.util.Map" mode="OUT"
                   optional="true" />
    </service>




    <!-- Load Message -->
    <service name="loadMessage" engine="java"
             location="main.java.com.banfftech.platformmanager.PlatformManagerQueryServices"
             invoke="loadMessage" auth="false">
        <description>loadMessage</description>

        <attribute name="bizType" type="String" mode="IN"
                   optional="true" />
        <attribute name="partyIdFrom" type="String" mode="IN"
                   optional="true" />
        <attribute name="partyIdTo" type="String" mode="IN"
                   optional="true" />
        <attribute name="objectId" type="String" mode="IN"
                   optional="true" />
        <attribute name="messages" type="List" mode="OUT"
                   optional="true" />

        <attribute name="resultMap" type="java.util.Map" mode="OUT"
                   optional="true" />
    </service>






    <service name="getWeChatUserInfo" engine="java"
             location="main.java.com.banfftech.platformmanager.wechat.WeChatUtil"
             invoke="getWeChatUserInfo" auth="false">
        <description> Get We Chat User Info</description>
        <attribute name="code" type="String" mode="IN" optional="true" />
        <attribute name="accessToken" type="String" mode="IN" optional="true" />
        <attribute name="openId" type="String" mode="IN" optional="true" />
        <attribute name="weChatUserInfo" type="java.util.Map" mode="OUT"
                   optional="true" />
        <attribute name="resultMap" type="java.util.Map" mode="OUT"
                   optional="true" />
    </service>

</services>