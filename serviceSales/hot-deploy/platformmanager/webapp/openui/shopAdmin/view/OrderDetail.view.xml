<mvc:View
	controllerName="sap.ui.demo.toolpageapp.controller.OrderDetail"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic">

	<semantic:DetailPage
		id="page"
		navButtonPress="onNavBack"
		showNavButton="true"
		title="{i18n>detailTitle}"
		busy="{orderDetailView>/busy}"
		busyIndicatorDelay="{orderDetailView>/delay}">

		<semantic:content>
			<ObjectHeader
				id="objectHeader"
				title="{
					parts: [
						'orders>orderId'
					],
					formatter: 'jQuery.sap.formatMessage'
				}"
				number="{
					parts: [
						{path: 'orders>grandTotal'},
						{path: 'orderDetailView>/currency'}
					],
					type: 'sap.ui.model.type.Currency',
					formatOptions: {
						showMeasure: false
					}
				}"
				numberUnit="{orderDetailView>/currency}"
				backgroundDesign="Translucent">
				<attributes>
					<ObjectAttribute title="{i18n>externalId}" text="{orders>externalId}" />
					<ObjectAttribute title="{i18n>status}" text="{orders>statusId}" />
					<ObjectAttribute title="{i18n>orderDate}" text="{
						path: 'orders>orderDate',
						formatOptions: { style: 'medium' }
					}" />
					<ObjectAttribute title="{i18n>originFacilityId}" text="{orders>originFacilityId}" />
				</attributes>
			</ObjectHeader>
			<IconTabBar
				id="iconTabBar"
				class="sapUiResponsiveContentPadding"
				select="onTabSelect"
				selectedKey="{detailView>/selectedTab}">
				<items>
					<IconTabFilter
						id="iconTabFilterShipping"
						icon="sap-icon://shipping-status"
						tooltip="{i18n>detailIconTabBarShipping}"
						key="shipping">
					</IconTabFilter>
					<IconTabFilter
						id="iconTabFilterProcessor"
						icon="sap-icon://employee"
						tooltip="{i18n>detailIconTabBarProcessor}"
						key="processor">
					</IconTabFilter>
				</items>
			</IconTabBar>
