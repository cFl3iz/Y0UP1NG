<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
    <description>WechatMiniProgram Services</description>
    <vendor></vendor>
    <version>1.0</version>


    <service name="queryOrderDetailFromWeChat" engine="java"
             location="main.java.com.banfftech.wechatminiprogram.WeChatOrderQueryServices"
             invoke="queryOrderDetailFromWeChat" auth="false">
        <description>queryOrderDetailFromWeChat</description>
        <attribute name="orderId" type="String" mode="IN"
                   optional="true" />
        <attribute name="orderDetail" type="java.util.Map" mode="OUT"
                   optional="true" />
        <attribute name="resultMap" type="java.util.Map" mode="OUT"
                   optional="true" />
    </service>

    <!--queryOrderFromWeChatList-->
    <service name="queryOrderListFromWeChat" engine="java"
             location="main.java.com.banfftech.wechatminiprogram.WeChatOrderQueryServices"
             invoke="queryOrderListFromWeChat" auth="false">
        <description>query Order FromWeChatList</description>
        <attribute name="openId" type="String" mode="IN"
                   optional="true" />
        <attribute name="orderList" type="List" mode="OUT"
                   optional="true" />
        <attribute name="resultMap" type="java.util.Map" mode="OUT"
                   optional="true" />
    </service>

    <!-- query My Collect Product 我收藏 我关注的产品 -->
    <service name="queryMyCollectProduct" engine="java"
             location="main.java.com.banfftech.wechatminiprogram.WeChatOrderQueryServices"
             invoke="queryMyCollectProduct" auth="false">
        <description>queryMyCollectProduct</description>
        <attribute name="openId" type="String" mode="IN"
                   optional="true" />
        <attribute name="collectList" type="List" mode="OUT"
                   optional="true" />
        <attribute name="resultMap" type="java.util.Map" mode="OUT"
                   optional="true" />
    </service>




    <!-- queryPostalAddress -->
    <service name="queryMyPostalAddress" engine="java"
             location="main.java.com.banfftech.wechatminiprogram.WeChatOrderQueryServices"
             invoke="queryMyPostalAddress" auth="false">
        <description>queryMyPostalAddress</description>
        <attribute name="openId" type="String" mode="IN"
                   optional="true"/>
        <attribute name="postalAddress" type="List" mode="OUT"
                   optional="true"/>
        <attribute name="resultMap" type="java.util.Map" mode="OUT"
                   optional="true"/>
    </service>



    <service name="queryMyProduct" engine="java"
             location="main.java.com.banfftech.wechatminiprogram.WeChatOrderQueryServices"
             invoke="queryMyProduct" auth="false">
        <description>queryMyProduct</description>
        <attribute name="partyId" type="String" mode="IN"
                   optional="true"/>
        <attribute name="productList" type="List" mode="OUT"
                   optional="true"/>
        <attribute name="resultMap" type="java.util.Map" mode="OUT"
                   optional="true"/>
    </service>


    <!-- 查询绝对正确的资源 -->
    <service name="queryDesiredResources" engine="java"
             location="main.java.com.banfftech.wechatminiprogram.WeChatOrderQueryServices"
             invoke="queryDesiredResources" auth="false">
        <description>queryDesiredResources</description>
        <attribute name="resourceName" type="String" mode="IN"
                   optional="true"/>
        <attribute name="resourcesList" type="List" mode="OUT"
                   optional="true"/>
        <attribute name="resultMap" type="java.util.Map" mode="OUT"
                   optional="true"/>
    </service>


    <!-- 组建一些人与我的好友关系 -->
    <service name="autoCreateFriendRelation" engine="java"
             location="main.java.com.banfftech.wechatminiprogram.WeChatMiniProgramServices"
             invoke="autoCreateFriendRelation" auth="false">
        <description>autoCreateFriendRelation</description>
        <attribute name="friends" type="String" mode="IN"
                   optional="true"/>
        <attribute name="resourcesName" type="String" mode="IN"
                   optional="true"/>


        <attribute name="resourcesName" type="String" mode="OUT"
                   optional="true"/>
        <attribute name="resultMap" type="java.util.Map" mode="OUT"
                   optional="true"/>
    </service>

</services>