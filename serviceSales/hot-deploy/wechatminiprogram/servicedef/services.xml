<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
    <description>WechatMiniProgram Services</description>
    <vendor></vendor>
    <version>1.0</version>
    <!--queryOrderFromWeChatList-->
    <service name="queryOrderListFromWeChat" engine="java"
             location="main.java.com.banfftech.wechatminiprogram.WeChatOrderQueryServices"
             invoke="queryOrderListFromWeChat" auth="false">
        <description>query Order FromWeChatList</description>
        <attribute name="openId" type="String" mode="IN"
                   optional="true" />
        <attribute name="orderList" type="List" mode="OUT"
                   optional="true" />
        <attribute name="resultMap" type="java.util.Map" mode="OUT"
                   optional="true" />
    </service>

    <!-- query My Collect Product 我收藏 我关注的产品 -->
    <service name="queryMyCollectProduct" engine="java"
             location="main.java.com.banfftech.wechatminiprogram.WeChatOrderQueryServices"
             invoke="queryMyCollectProduct" auth="false">
        <description>queryMyCollectProduct</description>
        <attribute name="openId" type="String" mode="IN"
                   optional="true" />
        <attribute name="collectList" type="List" mode="OUT"
                   optional="true" />
        <attribute name="resultMap" type="java.util.Map" mode="OUT"
                   optional="true" />
    </service>




    <!-- queryPostalAddress -->
    <service name="queryMyPostalAddress" engine="java"
             location="main.java.com.banfftech.wechatminiprogram.WeChatOrderQueryServices"
             invoke="queryMyPostalAddress" auth="false">
        <description>queryMyPostalAddress</description>
        <attribute name="openId" type="String" mode="IN"
                   optional="true"/>
        <attribute name="postalAddress" type="List" mode="OUT"
                   optional="true"/>
        <attribute name="resultMap" type="java.util.Map" mode="OUT"
                   optional="true"/>
    </service>


</services>